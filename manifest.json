{
  "name": "Page Glitcher",
  "description": "Take a screenshot of the current tab viewport and glitch it.",
  "version": "1.0",
  "author": "zky829",
  "background": {
    "persistent": false,
    "scripts": ["page-glitch.js"]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Page Glitcher"
  },
  "permissions": [
    "activeTab"
  ], 
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}